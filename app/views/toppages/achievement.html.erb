<div class="text-center mb-5">
  <h1>実績一覧</h1>
  <% if BattleRecord.find_by(user_id: session[:user_id]) %>
    <p class="h2 mt-5">キャラクター</p>
    <p class="mt-5"><%= link_to '合計撃破数ランキング', '/character_total_ranking', class: 'btn btn-lg btn-primary' %></p>
    <p class="mt-5"><%= link_to '最高撃破数ランキング', '/character_max_ranking', class: 'btn btn-lg btn-primary' %></p>
    <p class="mt-5"><%= link_to '平均撃破数ランキング', '/character_average_ranking', class: 'btn btn-lg btn-primary' %></p>
    <p class="font-weight-bold h5 mt-5">これまでの撃破数</p>
    <p class="font-weight-bold h1 mt-3"><%= @total_point %>p</p>
    <p class="font-weight-bold h5 mt-5">達成率</p>
    <p class="font-weight-bold h1 mt-3"><%= @achievement_rate %>%</p>
    <p class="font-weight-bold h3 mt-3">（<%= @data_count %> / <%= @all_data_count %>）</p>
    <p class="font-weight-bold h5 mt-5">合計撃破数が最も多いキャラクター</p>
    <p class="mt-3">
      <img class="rounded" src=<%= "/characters/#{@max_record_character.image}" %> alt="Character" width="160px" height="160px">
    </p>
    <p class="font-weight-bold h5"><%= @max_record_character.name %></p>
    <p class="font-weight-bold h4"><%= @max_record_point %></p>
  <% end %>
</div>
